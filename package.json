{
  "name": "@palmabit/sacajawea",
  "version": "2.1.4",
  "description": "Manage your multi-language routes with Next.js, easily",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Palmabit-IT/Sacajawea.git"
  },
  "main": "dist",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint 'src/*' 'test/*'",
    "lint-fix": "eslint --fix src/*",
    "build": "del dist/* && babel src -d dist",
    "prepublishOnly": "npm run test",
    "pretest": "npm run lint && npm run build",
    "test": "npm run testOnly",
    "testOnly": "jest \\.test.js --coverage",
    "testDev": "jest \\.test.js --coverage --watchAll",
    "testCI": "npm run test && cat coverage/lcov.info | coveralls"
  },
  "jest": {
    "roots": [
      "test/",
      "dist/"
    ],
    "setupFiles": [
      "raf/polyfill",
      "./test/setup.js"
    ],
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!src/link/**",
      "!**/config/**"
    ]
  },
  "dependencies": {
    "async": "^2.6.1",
    "eslint": "^5.5.0",
    "eslint-plugin-jest": "^21.22.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "path-to-regexp": "^1.7.0",
    "prop-types": "^15.6.1",
    "remove-trailing-separator": "^1.1.0"
  },
  "peerDependencies": {
    "next": ">=4",
    "react": "^16"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@types/next": "^7.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "^23.6.0",
    "concurrently": "^3.5.0",
    "coveralls": "^3.0.1",
    "del-cli": "^1.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "next": ">=7.0.2",
    "node-mocks-http": "^1.7.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "regenerator-runtime": "^0.12.1"
  },
  "author": "neomusic",
  "license": "MIT",
  "keywords": [
    "next",
    "next.js",
    "react",
    "route",
    "router",
    "routes",
    "routing",
    "multi-language",
    "next-middleware"
  ],
  "bugs": {
    "url": "https://github.com/Palmabit-IT/Sacajawea/issues"
  },
  "homepage": "https://github.com/Palmabit-IT/Sacajawea#readme",
  "directories": {
    "test": "test"
  }
}
